    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@vercel/ncc": "^0.36.1",
    "zod": "^3.22.2"
  }
