{
  "name": "langual",
  "description": "Langual",
  "version": "1.0.0",
  "author": "Gual Casas",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "scripts": {
    "dev": "dotenv -e ../../.env.dev -- ncc build src/index.ts -w -s",
    "build": "rm -rf dist && tsc --noEmit && ncc build src/index.ts -m",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts}\""
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "tsx": "^3.12.7"
  }
}
