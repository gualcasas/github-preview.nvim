{
  "name": "langual-server",
  "description": "Langual",
  "version": "1.0.0",
  "author": "Gual Casas",
  "license": "MIT",
  "bin": {
    "langual-server": "./dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "winston": "^3.10.0"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "_dotenv_print_logs": "tail -F -n 0 $LSP_SERVER_STREAM",
    "print-logs": "dotenv -e ../../.env.dev -- pnpm _dotenv_print_logs",
    "dev": "ncc build src/index.ts -w -s",
    "build": "rm -rf dist && tsc --noEmit && ncc build src/index.ts -m",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts}\""
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "concurrently": "^8.2.1"
  }
}
