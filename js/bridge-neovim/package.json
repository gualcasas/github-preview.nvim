{
  "name": "bridge-neovim",
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "dotenv -e ../../.env.dev -- tsx watch src/index.ts",
    "build": "rm -rf dist && tsc --noEmit && ncc build src/index.ts -m",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts}\""
  },
  "dependencies": {
    "minimatch": "^9.0.3",
    "neovim": "^4.10.1",
    "valibot": "^0.13.1",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@vercel/ncc": "^0.36.1",
    "dotenv-cli": "^7.3.0",
    "tsx": "^3.12.7"
  }
}
