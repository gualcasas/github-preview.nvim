{
  "name": "github-preview.nvim",
  "author": "wallpants",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Live preview of local github repos",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/wallpants/github-preview.nvim.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "format": "prettier **/*.{md,ts,tsx,css,yml} -w",
    "logs": "bunvim logs github-preview",
    "lint": "eslint . --ext ts --ext tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc -p ./app/tsconfig.json",
    "check": "bun run typecheck && bun run lint",
    "start": "bun run app/index.ts",
    "web:dev": "cd app/web && bun vite --open",
    "tailwind:compile": "tailwindcss -c ./app/web/tailwind.config.cjs -o ./app/web/static/tailwind.css"
  },
  "dependencies": {
    "bunvim": "1.1.13",
    "clsx": "^2.1.1",
    "globby": "^14.0.2",
    "isbinaryfile": "5.0.4",
    "mermaid": "^10.9.3",
    "opener": "^1.5.2",
    "pantsdown": "2.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reconnecting-websocket": "^4.4.0",
    "tailwind-merge": "^2.5.4",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@types/bun": "latest",
    "@types/eslint": "^9.6.1",
    "@types/opener": "^1.4.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.1",
    "commitlint": "^19.6.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "inquirer": "^9.3.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "semantic-release": "^24.2.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
