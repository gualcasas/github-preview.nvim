{
  "name": "github-preview.nvim",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "author": "wallpants",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/wallpants/github-preview.nvim.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "format": "prettier **/*.{md,ts,tsx,css} -w",
    "logs": "bunvim logs github-preview",
    "lint": "tsc -p ./app/tsconfig.json && eslint . --ext ts --ext tsx --report-unused-disable-directives --max-warnings 0",
    "start": "bun run app/index.ts",
    "web:dev": "cd app/web && bun vite --open",
    "tailwind:compile": "tailwindcss -c ./app/web/tailwind.config.cjs -o ./app/web/static/tailwind.css"
  },
  "dependencies": {
    "bunvim": "1.1.6",
    "clsx": "^2.0.0",
    "globby": "^13.2.2",
    "isbinaryfile": "5.0.0",
    "mermaid": "^10.6.1",
    "opener": "^1.5.2",
    "pantsdown": "2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reconnecting-websocket": "^4.4.0",
    "tailwind-merge": "^2.0.0",
    "valibot": "^0.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "@types/eslint": "^8.44.8",
    "@types/opener": "^1.4.3",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "commitlint": "^18.4.3",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "3.13.0",
    "inquirer": "8",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "semantic-release": "^22.0.8",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.10"
  }
}
