{
  "name": "github-preview.nvim",
  "author": "Gual Casas",
  "description": "",
  "packageManager": "pnpm@8.6.10",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "vi": "dotenv nvim",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "bridge:logs": "dotenv -- bash -c 'tail -F -n 0 \"$BRIDGE_LOG_STREAM\"'",
    "server:logs": "dotenv -- bash -c 'tail -F -n 0 \"$SERVER_LOG_STREAM\"'",
    "spell:check": "pnpm cspell ** --no-progress",
    "lint": "pnpm spell:check && turbo run lint",
    "build": "turbo run build",
    "bdsm": "pnpm lint --force && pnpm build --force"
  },
  "devDependencies": {
    "@microsoft/tsdoc-config": "^0.16.2",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "cspell": "^7.2.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@2.28.0-2",
    "eslint-plugin-tsdoc": "0.2.17",
    "husky": "^8.0.3",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "3.2.3",
    "turbo": "latest",
    "typescript": "5.1.6"
  }
}
