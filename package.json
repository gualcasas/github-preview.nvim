{
  "name": "github-preview.nvim",
  "version": "0.0.1",
  "author": "Gual Casas",
  "license": "MIT",
  "description": "",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf dist && rm -rf logs/*.log",
    "web:dev": "dotenv -e .env.dev -- vite dev nodejs/client --open",
    "web:build": "tsc && vite build nodejs/client --outDir ../../dist",
    "web:preview": "vite preview nodejs/client",
    "server:dev": "dotenv -e .env.dev -- esno watch nodejs/server/index.ts ",
    "server:build": "ncc build nodejs/server/index.ts -m",
    "build": "pnpm clean && pnpm web:build && pnpm server:build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"nodejs/**/*.{ts,html,css}\""
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@wooorm/starry-night": "^2.1.1",
    "clipboard": "^2.0.11",
    "clsx": "^2.0.0",
    "github-markdown-css": "^5.2.0",
    "globby": "^13.2.2",
    "hast-util-to-html": "^9.0.0",
    "history": "^5.3.0",
    "istextorbinary": "^6.0.0",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "markdown-it": "^13.0.1",
    "match-sorter": "^6.3.1",
    "minimatch": "^9.0.3",
    "neovim": "^4.10.1",
    "opener": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reconnecting-websocket": "^4.4.0",
    "serve-handler": "^6.1.5",
    "sort-by": "^1.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "valibot": "^0.13.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.5.0",
    "@types/eslint": "8.44.2",
    "@types/lodash-es": "^4.17.8",
    "@types/markdown-it": "^13.0.0",
    "@types/opener": "^1.4.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/serve-handler": "^6.1.1",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "@vercel/ncc": "^0.36.1",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "connect-history-api-fallback": "^2.0.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.46.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@2.28.0-2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-tailwindcss": "3.13.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "esno": "^0.17.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.28",
    "prettier": "3.0.1",
    "prettier-plugin-organize-imports": "3.2.3",
    "typescript": "5.1.6",
    "vite": "5.0.0-beta.0"
  }
}
